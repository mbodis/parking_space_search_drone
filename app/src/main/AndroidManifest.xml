<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sk.svb.drone.parking_space">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-feature android:name="android.hardware.usb.accessory" android:required="false"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.parrot.sdksample.activity.DeviceListActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.parrot.sdksample.activity.UsbAccessoryActivityImpl"
            android:theme="@android:style/Theme.NoDisplay"
            android:noHistory="true"
            android:taskAffinity="com.parrot.sdk.usb">
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_ACCESSORY_ATTACHED" />
            </intent-filter>
            <meta-data
                android:name="android.hardware.usb.action.USB_ACCESSORY_ATTACHED"
                android:resource="@xml/usb_accessory_filter" />
        </activity>
        <activity
            android:name="com.parrot.sdksample.activity.BebopActivity"
            android:screenOrientation="landscape"/>

        <activity
            android:name="com.parrot.sdksample.activity.SkyControllerActivity"
            android:screenOrientation="landscape"/>

        <activity
            android:name="com.parrot.sdksample.activity.SkyController2Activity"
            android:screenOrientation="landscape"/>

        <activity
            android:name="com.parrot.sdksample.activity.JSActivity"
            android:screenOrientation="landscape"/>

        <activity
            android:name="com.parrot.sdksample.activity.MiniDroneActivity"
            android:screenOrientation="landscape"/>

        <activity
            android:name="com.parrot.sdksample.activity.SwingDroneActivity"
            android:screenOrientation="landscape"/>
    </application>

</manifest>